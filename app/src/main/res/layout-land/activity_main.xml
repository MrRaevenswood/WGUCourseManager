<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="73dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="683dp"
        android:layout_height="29dp"

        android:layout_marginTop="8dp"
        android:text="Welcome to the WGU Course Manager"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_ViewTerms"
        android:layout_width="132dp"
        android:layout_height="27dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="240dp"
        android:layout_marginRight="240dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorPrimaryDark"
        android:onClick="openTermsWindow"
        android:text="View Terms"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/bt_ViewCourses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bt_ViewCourses"
        android:layout_width="132dp"
        android:layout_height="29dp"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="240dp"
        android:layout_marginRight="240dp"
        android:background="?attr/colorPrimaryDark"
        android:onClick="openCoursesWindow"
        android:text="VIEW COURSES"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/bt_ViewAssessments"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt_ViewAssessments"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginBottom="92dp"
        android:layout_marginEnd="236dp"
        android:layout_marginRight="236dp"
        android:background="?attr/colorPrimaryDark"
        android:onClick="openAssessmentWindow"
        android:text="View Assessments"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="194dp"
        android:layout_height="190dp"
        android:layout_marginBottom="92dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_ViewAssessments"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/wgu_logo" />


</android.support.constraint.ConstraintLayout>